{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="container">

<h1>User index</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Vérifié</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for user in users %}
      <tr>
        <td>{{ user.id }}</td>
        <td>{{ user.email }}</td>
        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        <td>{{ user.isVerified ? 'oui' : 'Non' }}</td>
        <td>
          <a class="main_btn small" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
          <a class="main_btn small" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        </td>
      </tr>
      {% else %}
      <tr>
        <td colspan="8">Aucune donnée trouvée</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="main_btn" href="{{ path('app_user_new') }}">Nouveau User</a>
</div>
{% endblock %}
